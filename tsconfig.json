{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "allowJs": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "noEmit": false
    },
    "include": [
      "./**/*.ts",
      "src/**/*.ts"
    ]
  }